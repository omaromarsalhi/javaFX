<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane alignment="TOP_LEFT" stylesheets="@../../style/Buttons.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pidev.javafx.controller.ticket.getTicket">
   <children>
      <HBox fx:id="formBox" style="-fx-background-radius: 10; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-color: white; -fx-border-color: black;" stylesheets="@../../style/formLayout.css">
         <children>
            <VBox fx:id="Box1" alignment="BOTTOM_CENTER" prefHeight="503.0" prefWidth="384.0" spacing="10.0">
               <children>
                  <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                  <VBox minHeight="68.0" minWidth="300.0" prefHeight="48.0" prefWidth="266.0" style="-fx-background-radius: 20; -fx-border-radius: 20;">
                     <children>
                        <Label alignment="BOTTOM_LEFT" prefHeight="36.0" prefWidth="160.0" text="Ticket Number:">
                           <font>
                              <Font name="System Italic" size="18.0" />
                           </font>
                        </Label>
                        <HBox fx:id="formBox1" maxWidth="332.0" prefHeight="38.0" prefWidth="361.0">
                           <children>
                              <TextField fx:id="ticketNumber" minWidth="239.0" prefHeight="38.0" prefWidth="270.0" promptText="Your ticket  !!!" styleClass="text-field">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                     <VBox.margin>
                        <Insets top="4.0" />
                     </VBox.margin>
                  </VBox>
                  <VBox minHeight="68.0" minWidth="300.0" prefHeight="0.0" prefWidth="267.0">
                     <children>
                        <Label alignment="BOTTOM_LEFT" prefHeight="36.0" prefWidth="160.0" text="Custom Number:">
                           <font>
                              <Font name="System Italic" size="18.0" />
                           </font>
                        </Label>
                        <HBox fx:id="formBox2" prefHeight="30.0">
                           <children>
                              <TextField fx:id="customName" prefHeight="42.0" prefWidth="270.0" promptText="Place you nickname here" styleClass="text-field">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </VBox>
                  <VBox minHeight="68.0" minWidth="300.0" prefHeight="68.0" prefWidth="270.0">
                     <children>
                        <Label alignment="BOTTOM_LEFT" prefHeight="36.0" prefWidth="160.0" text="Quantity :">
                           <font>
                              <Font name="System Italic" size="18.0" />
                           </font>
                        </Label>
                        <HBox fx:id="formBox3" prefHeight="30.0">
                           <children>
                              <DatePicker fx:id="date" prefHeight="30.0" prefWidth="302.0" promptText="Date neet to be for the next 24h " styleClass="choice-box" stylesheets="@../../style/style.css" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </VBox>
                  <VBox minHeight="68.0" minWidth="300.0">
                     <children>
                        <Label alignment="BOTTOM_LEFT" prefHeight="36.0" prefWidth="160.0" text="Category :">
                           <font>
                              <Font name="System Italic" size="18.0" />
                           </font>
                        </Label>
                        <ChoiceBox fx:id="type" minHeight="34.0" prefHeight="34.0" prefWidth="270.0">
                           <VBox.margin>
                              <Insets left="10.0" />
                           </VBox.margin>
                        </ChoiceBox>
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </VBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="54.0" prefWidth="267.0" style="-fx-background-radius: 20; -fx-border-style: 20;">
                     <children>
                        <Label prefHeight="26.0" prefWidth="90.0" text="Print PDF">
                           <font>
                              <Font name="System Italic" size="20.0" />
                           </font>
                        </Label>
                        <Button fx:id="imageBtn" mnemonicParsing="false" style="-fx-background-color: transparent;" stylesheets="@../../style/formLayout.css">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../namedIcons/download-pdf.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="imageBtn1" mnemonicParsing="false" style="-fx-background-color: transparent;" stylesheets="@../../style/formLayout.css">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../namedIcons/download-pdf.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </VBox.margin>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</StackPane>
