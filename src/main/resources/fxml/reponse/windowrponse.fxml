<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" prefHeight="394.0" prefWidth="844.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pidev.javafx.controller.reponse.ReponseWindow">
    <children>
        <ImageView fx:id="imagePath" fitHeight="278.0" fitWidth="330.0" pickOnBounds="true" preserveRatio="true" />
        <Separator prefHeight="0.0" prefWidth="35.0" visible="false" />
        <VBox alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <Label fx:id="privatekey" prefHeight="17.0" prefWidth="99.0" styleClass="recc" text="privatekey" textAlignment="CENTER" />
                <Separator orientation="VERTICAL" prefHeight="112.0" prefWidth="5.0" visible="false" />
                <Label fx:id="date" prefHeight="18.0" prefWidth="55.0" styleClass="recc" text="date" />
            </children>
        </VBox>
        <VBox alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <Label fx:id="subject" prefHeight="18.0" prefWidth="89.0" text="Subject" />
                <Separator orientation="VERTICAL" prefHeight="109.0" prefWidth="3.0" visible="false" />
                <Label fx:id="etat" prefHeight="17.0" prefWidth="99.0" styleClass="recc" text="etat" />
            </children>
        </VBox>
        <Label fx:id="reponse" alignment="TOP_LEFT" contentDisplay="TOP" prefHeight="192.0" prefWidth="99.0" styleClass="recc" stylesheets="@../../styles/style.css" text="Reponse" textOverrun="CLIP" />
        <Button fx:id="update" mnemonicParsing="false" onAction="#showPopup" styleClass="add-btn" stylesheets="@../../styles/style.css" text="Update" />
        <Separator prefHeight="0.0" prefWidth="50.0" visible="false" />
        <Button fx:id="Delete" mnemonicParsing="false" onAction="#supprimer_Reclamation" styleClass="add-btn" stylesheets="@../../styles/style.css" text="Delete" />
    </children>
</HBox>
